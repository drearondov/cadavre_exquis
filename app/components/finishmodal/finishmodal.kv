#:kivy 2.1.0

#: import hex kivy.utils.get_color_from_hex


<FinishModal>

    cadavre_title: cadavre_title

    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.4, 0.5
        padding: 64, 48
        spacing: 24

        canvas:
            Color:
                rgba: hex("#E8DDD4")
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [48]

        Title:
            text: "[u]Finish corps[/u]"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.8, 0.35
            font_size: 60
            markup: True

        Title:
            text: "[u]TÃ­tle[/u]"
            size_hint: 0.2, 0.2
            font_size: 40
            align_heading: "left"
            markup: True

        TextInput:
            id: cadavre_title
            size_hint: 1, 0.4
            color: hex('#333333')
            cursor_color: hex('#333333')
            hint_text: "title"

        Title:
            text: "[u]Note[/u]"
            size_hint: 0.2, 0.2
            font_size: 40
            align_heading: "left"
            markup: True

        TextInput:
            id: cadavre_title
            size_hint: 1, 0.4
            color: hex('#333333')
            cursor_color: hex('#333333')
            hint_text: "note"

        BoxLayout:
            orientation:"horizontal"
            size_hint: 1, 0.33

            ArrowLeftButton:
                type_size: "15sp"
                size_hint: 0.5, 1
                on_release: root.dismiss()

            RegularButton:
                label_message: "New game"
                type_size: "15sp"
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.dismiss()
                    root.parent.children[1].children[0].clear_words()
                    root.parent.children[1].current = "menu_screen"

            ArrowRightButton:
                type_size: "15sp"
                label_message: "Save"
                size_hint: 0.5, 1
                on_release:
                    root.dismiss()
                    root.parent.children[1].children[0].save_image(root.ids["cadavre_title"].text)

