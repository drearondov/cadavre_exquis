#:kivy 2.1.0

#: import hex kivy.utils.get_color_from_hex

<AboutScreen>

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"
        padding: 256
        spacing: 144

        canvas:
            Color:
                rgba: hex("#E8DDD4")
            Rectangle:
                size: self.size
                pos: self.pos

        Title:
            text: "[u]Sobre el proyecto[/u]"
            font_size: "50sp"
            size_hint_y: 0.25
            pos_hint: {"center_y": 0.5, "center_x": 0.5}
            markup: True

        Text:
            text: "Cadavre Exquis es una herramienta de desbloqueo creativo o un juego colaborativo basado en la técnica surrealista del Cadáver Exquisito y los 'Whiteout poems'. En esta versión, los jugadores usarán las palabras de los grandes poetas de la historia para dar vida a nuevas creaciones."
            text_size: 1600, None

        Title:
            text: "[u]Créditos[/u]"
            font_size: "50sp"
            size_hint_y: 0.25
            pos_hint: {"center_y": 0.5, "center_x": 0.5}
            markup: True

        Text:
            text: "Los poemas y datos de los poetas fueron obtenidos de Poetrysoup.com."
            text_size: 1600, None

        ArrowLeftButton:
            on_release: root.manager.current = "home_screen"
            size_hint: 0.25, 0.25
            pos_hint: {"left": 0.1}
