#:kivy 2.1.0

#: import hex kivy.utils.get_color_from_hex


<GalleryScreen>:

    gallery_list: gallery_list
    gallery_scroll: gallery_scroll


    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"
        spacing: 50
        padding: 50

        canvas:
            Color:
                rgba: hex("#E8DDD4")
            Rectangle:
                size: self.size
                pos: self.pos

        Title:
            text: "[u]Morgue[/u]"
            font_size: "50sp"
            pos_hint: {"center_y": 0.5, "center_x": 0.5}
            size_hint: 0.4, 0.15
            markup: True

        # Grid Menu
        ScrollView:
            id: gallery_scroll
            do_scroll_x: False
            do_scroll_y: True
            dscroll_timeout: 250

            GridLayout:
                id: gallery_list
                size_hint_y: None
                cols: 3
                row_default_height: root.height * 0.3
                height: self.minimum_height
                spacing: 64
                padding: [36, 0]

        # Bottom buttons
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            padding: [144, 0]
            spacing: 250

            ArrowLeftButton:
                on_release: root.manager.current = "home_screen"

            ArrowRightButton:
                label_message: "New game"
                on_release:
                    root.manager.current = "menu_screen"
                    root.manager.ids["menu_screen"].populate_screen()
