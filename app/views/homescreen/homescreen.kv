#:kivy 2.1.0

#: import hex kivy.utils.get_color_from_hex

<HomeScreen>:

    FloatLayout:
        size: root.width, root.height

        canvas:
            Color:
                rgba: hex("#E8DDD4")
            Rectangle:
                size: self.size
                pos:self.pos

        # Logo
        Title:
            text: "[u]Cadavre Exquis[/u]"
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            size_hint: 0.75, 0.3
            font_size: "85sp"

        # Menu
        GridLayout:
            cols: 2
            size_hint: 0.5,0.3
            pos_hint: {"center_x": 0.5, "top": 0.45}
            padding: 30, 30
            spacing: 60, 30

            MainButton:
                label_message: "New Game"
                on_release:
                    root.manager.current = "menu_screen"
                    root.manager.ids["menu_screen"].populate_screen()

            MainButton:
                label_message: "Demo"
                on_release: root.manager.current = "demo_screen"

            MainButton:
                label_message: "Bios"
                on_release:
                    root.manager.current = "bio_screen"
                    root.manager.ids["bio_screen"].populate_screen()

            MainButton:
                label_message: "Morgue"
                on_release:
                    root.manager.current = "gallery_screen"
                    root.manager.ids["gallery_screen"].populate_screen()

            MainButton:
                label_message: "About"
                on_release: root.manager.current = "about_screen"

            MainButton:
                label_message: "Language"
                text_size: self.size
                halign: "center"
